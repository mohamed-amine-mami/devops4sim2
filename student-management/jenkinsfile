pipeline {
    agent any

    tools {
        maven 'Maven-3'
        jdk 'JDK-17'
    }

    environment {
        DOCKER_IMAGE          = "student-management"
        DOCKERHUB_REPO        = "r3aad/student-management"
        K8S_NAMESPACE         = "devops"
    }

    stages {
        /* -------- CHECKOUT CODE -------- */
        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/mohamed-amine-mami/devops4sim2.git'
            }
        }

        /* -------- VERIFY ENVIRONMENT -------- */
        stage('Verify Environment') {
            steps {
                sh 'mvn --version'
                sh 'java -version'
                sh 'docker --version'
                sh 'kubectl version --client'
            }
        }

        /* -------- MAVEN BUILD -------- */
        stage('Build Maven Package') {
            steps {
                dir('student-management') {
                    sh 'mvn -B clean package -DskipTests'
                }
            }
        }

        // SONARQUBE TEMPORAIREMENT DÉSACTIVÉ (on le remettra après la validation du workshop)
        // stage('SonarQube Analysis') { ... }
        // stage('Quality Gate') { ... }

        /* -------- DOCKER BUILD & PUSH -------- */
        stage('Build & Push Docker Image') {
            steps {
                dir('student-management') {
                    sh "docker build -t ${DOCKER_IMAGE}:latest ."
                    
                    withCredentials([usernamePassword(
                        credentialsId: 'dockerhub',
                        usernameVariable: 'DOCKER_USER',
                        passwordVariable: 'DOCKER_PASS'
                    )]) {
                        sh '''
                        echo $DOCKER_PASS | docker login -u $DOCKER_USER --password-stdin
                        docker tag ${DOCKER_IMAGE}:latest ${DOCKERHUB_REPO}:latest
                        docker tag ${DOCKER_IMAGE}:latest ${DOCKERHUB_REPO}:${BUILD_NUMBER}
                        docker push ${DOCKERHUB_REPO}:latest
                        docker push ${DOCKERHUB_REPO}:${BUILD_NUMBER}
                        '''
                    }
                }
            }
        }

        /* -------- DÉPLOIEMENT KUBERNETES -------- */
        stage('Deploy to Kubernetes') {
            steps {
                // Création du namespace + déploiement complet (première fois ou si supprimé)
                sh "kubectl apply -f k8s/namespace.yaml || true"
                sh "kubectl apply -f k8s/mysql-deployment.yaml"
                sh "kubectl apply -f k8s/spring-deployment.yaml"

                // Mise à jour de l'image avec la nouvelle version
                sh """
                kubectl -n ${K8S_NAMESPACE} set image deployment/spring-deployment \
                    spring=${DOCKERHUB_REPO}:${BUILD_NUMBER} --record
                
                kubectl -n ${K8S_NAMESPACE} rollout status deployment/spring-deployment --timeout=180s
                """
            }
        }

        /* -------- TEST FINAL DE L'APPLICATION -------- */
        stage('Test Application') {
            steps {
                script {
                    def url = sh(script: "minikube service spring-service -n ${K8S_NAMESPACE} --url | head -1", returnStdout: true).trim()
                    echo "Application accessible ici → ${url}"
                    sh "curl -f ${url}/department/getAllDepartment || exit 1"
                    echo "TOUT FONCTIONNE PARFAITEMENT ! WORKSHOP 100% RÉUSSI !"
                }
            }
        }
    }

    post {
        always {
            echo "Nettoyage du workspace..."
            cleanWs()
        }
        success {
            echo "PIPELINE TERMINÉ AVEC SUCCÈS - TU AS FINI LE WORKSHOP KUBERNETES !!"
        }
        failure {
            echo "ÉCHEC - regarde les logs ci-dessus"
        }
    }
}
