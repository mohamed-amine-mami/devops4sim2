pipeline {
    agent any

    tools {
        jdk 'JDK-17'
        maven 'Maven-3'
    }

    stages {

        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/mohamed-amine-mami/devops4sim2.git'
            }
        }

        stage('Verify Environment') {
            steps {
                sh 'mvn --version'
                sh 'java -version'
                sh 'docker --version'
            }
        }

        stage('Build Maven') {
            steps {
                dir('student-management') {   // ğŸ”¥ FIX: Run inside the folder
                    sh 'mvn -B clean package -DskipTests'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                dir('student-management') {   // ğŸ”¥ Must be inside this folder
                    sh 'docker build -t student-management .'
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                dir('student-management') {
                    sh '''
                        docker tag student-management r3aad/student-management:latest
                        docker login -u r3aad -p YOUR_DOCKERHUB_TOKEN
                        docker push r3aad/student-management:latest
                    '''
                }
            }
        }
    }
}
