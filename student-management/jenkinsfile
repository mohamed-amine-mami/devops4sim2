pipeline {
    agent any

    tools {
        maven 'Maven-3'
        jdk 'JDK-17'
    }

    environment {
        DOCKER_IMAGE = "student-management"
        DOCKERHUB_REPO = "r3aad/student-management"
    }

    stages {

        /* -------- CHECKOUT CODE -------- */
        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/mohamed-amine-mami/devops4sim2.git'
            }
        }

        /* -------- VERIFY ENVIRONMENT -------- */
        stage('Verify Environment') {
            steps {
                sh 'mvn --version'
                sh 'java -version'
                sh 'docker --version'
            }
        }

        /* -------- MAVEN BUILD -------- */
        stage('Build Maven Package') {
            steps {
                dir('student-management') {
                    sh 'mvn -B clean package -DskipTests'
                }
            }
        }

        /* -------- SONARQUBE ANALYSIS -------- */
        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('MySonar') {
                    dir('student-management') {
                        sh """
                            mvn sonar:sonar \
                            -Dsonar.projectKey=student-management \
                            -Dsonar.projectName=student-management \
                            -Dsonar.host.url=http://localhost:9000
                        """
                    }
                }
            }
        }

        /* -------- WAIT FOR QUALITY GATE -------- */
        stage('Quality Gate') {
            steps {
                timeout(time: 2, unit: 'MINUTES') {
                    waitForQualityGate abortPipeline: true
                }
            }
        }

        /* -------- DOCKER BUILD -------- */
        stage('Build Docker Image') {
            steps {
                dir('student-management') {
                    sh "docker build -t ${DOCKER_IMAGE} ."
                }
            }
        }

        /* -------- DOCKER HUB PUSH -------- */
        stage('Push Docker Image') {
            steps {
                withCredentials([usernamePassword(
                    credentialsId: 'dockerhub',
                    usernameVariable: 'DOCKER_USER',
                    passwordVariable: 'DOCKER_PASS'
                )]) {
                    dir('student-management') {
                        sh '''
                            echo $DOCKER_PASS | docker login -u $DOCKER_USER --password-stdin
                            docker tag student-management:latest r3aad/student-management:latest
                            docker push r3aad/student-management:latest
                        '''
                    }
                }
            }
        }

        /* -------- TEST DOCKER IMAGE -------- */
        stage('Test Docker Image') {
            steps {
                sh 'docker images'
            }
        }
    }

    post {
        always {
            echo "Cleaning workspace..."
            cleanWs()
        }
        success {
            echo "üéâ BUILD SUCCESSFUL"
        }
        failure {
            echo "‚ùå BUILD FAILED ‚Äî check logs"
        }
    }
}



1
